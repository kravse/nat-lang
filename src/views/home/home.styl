@import '~@/assets/styles/mixins'
@import '~@/assets/styles/variables'

.home
  margin: 0
  padding: 50px 100px

form
  p
    text-align: center

.input-area
  display: flex
  flex-direction: column
  margin: 0 auto
  width: 700px

  .input-and-button
    width: 100%
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    text-align: center

    input
      width: 80%
    button
      width: 20%
  .counter
    font-size: 12px
    margin: 0
    text-align: left

p
  width: 100%
  text-align: left
  font-size: 24px

.job
  border: 1px solid black
  margin: 20px
  padding: 10px
  .title
    text-align: center
    margin: 20px auto

    h3, p
      margin: 0
      text-align: center

    p
      font-size: 14px

